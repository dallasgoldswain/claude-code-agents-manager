{
  "permissions": {
    "allow": [
      "Bash(bundle:*)",
      "Bash(rake:*)",
      "Bash(ruby:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(rails db:migrate:*)",
      "Bash(rake test:*)"
